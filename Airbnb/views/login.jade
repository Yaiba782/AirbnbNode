extends layout

block content
    if error
        div.alert.alert-danger Mauvais couple login/password
    div.input.col-md-6
        form(name="loginForm", method="post",class="form-inline")           
            div.col-md-12.form-group
                span.label.col-md-4 Login
                input(type="text", name="login", placeholder="Login", class="form-control col-md-8")
            div.col-md-12.form-group
                span.label.col-md-4  Password
                input(type="password", name="password", placeholder="******", class="form-control col-md-8")
            div.col-md-6.pull-right
                    a(href='/register',class="btn btn-info") S'inscrire
                    span.col-md-1
                    input(type="submit", class="btn btn-success", value="Connexion")
